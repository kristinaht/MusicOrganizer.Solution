@using MusicOrganizer.Models;

<h1>To Do List</h1>

@if(Model.Count == 0)
{
  <p>There are no albums for the Artist.</p>
}
<ul>
  @foreach(Album album in Model)
  {
   <li><a href='/albums/@album.Id'>@album.Title</a></li>
  }
</ul>

<a href="/albums/new">Add a new item.</a>

<form action="/albums/delete" method="post">
  <button type="submit" name="button">Clear all albums</button>
</form>